# ==========================================
# API GATEWAY CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your values

SERVICE_NAME=api-gateway
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
HTTP_PORT=8000
SERVER_HOST=0.0.0.0
READ_TIMEOUT=30
WRITE_TIMEOUT=30
SHUTDOWN_TIMEOUT=15

# Authentication Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=15
JWT_REFRESH_TOKEN_TTL=168
JWT_RESET_TOKEN_TTL=30
AUTH_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_BURST_SIZE=20

# External Services
USER_SERVICE_GRPC=localhost:9001
USER_SERVICE_HTTP=http://localhost:8001
USER_SERVICE_TIMEOUT=30
USER_SERVICE_ENABLED=true

PRODUCT_SERVICE_GRPC=localhost:9002
PRODUCT_SERVICE_HTTP=http://localhost:8002
PRODUCT_SERVICE_TIMEOUT=30
PRODUCT_SERVICE_ENABLED=true

ORDER_SERVICE_GRPC=localhost:9003
ORDER_SERVICE_HTTP=http://localhost:8003
ORDER_SERVICE_TIMEOUT=30
ORDER_SERVICE_ENABLED=true

PAYMENT_SERVICE_GRPC=localhost:9004
PAYMENT_SERVICE_HTTP=http://localhost:8004
PAYMENT_SERVICE_TIMEOUT=30
PAYMENT_SERVICE_ENABLED=true

INVENTORY_SERVICE_GRPC=localhost:9005
INVENTORY_SERVICE_HTTP=http://localhost:8005
INVENTORY_SERVICE_TIMEOUT=30
INVENTORY_SERVICE_ENABLED=true

NOTIFICATION_SERVICE_GRPC=localhost:9006
NOTIFICATION_SERVICE_HTTP=http://localhost:8006
NOTIFICATION_SERVICE_TIMEOUT=30
NOTIFICATION_SERVICE_ENABLED=true

# External APIs
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/api-gateway.log
