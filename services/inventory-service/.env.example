# ==========================================
# INVENTORY SERVICE CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your values

SERVICE_NAME=inventory-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server Configuration
HTTP_PORT=8005
GRPC_PORT=9005
SERVER_HOST=0.0.0.0
READ_TIMEOUT=30
WRITE_TIMEOUT=30
SHUTDOWN_TIMEOUT=15

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=inventory_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_ENABLED=true

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_ENABLED=true

# External Services
PRODUCT_SERVICE_GRPC=localhost:9002
PRODUCT_SERVICE_HTTP=http://localhost:8002
PRODUCT_SERVICE_TIMEOUT=30
PRODUCT_SERVICE_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/inventory-service.log
