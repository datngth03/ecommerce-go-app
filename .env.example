# ==========================================
# E-COMMERCE MICROSERVICES - DOCKER COMPOSE
# ==========================================
# This file is used by docker-compose.yaml for local development
# For production, each service should use its own .env file

# ==========================================
# INFRASTRUCTURE CONFIGURATION
# ==========================================

# PostgreSQL
POSTGRES_VERSION=15-alpine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_VERSION=7-alpine
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_VERSION=3.13-management-alpine
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# ==========================================
# SHARED CONFIGURATION
# ==========================================
ENVIRONMENT=development
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# USER SERVICE (8001/9001)
# ==========================================
USER_SERVICE_NAME=user-service
USER_HTTP_PORT=8001
USER_GRPC_PORT=9001
USER_DB_NAME=users_db
USER_REDIS_DB=0
USER_JWT_SECRET=your-secret-key-change-in-production

# ==========================================
# PRODUCT SERVICE (8002/9002)
# ==========================================
PRODUCT_SERVICE_NAME=product-service
PRODUCT_HTTP_PORT=8002
PRODUCT_GRPC_PORT=9002
PRODUCT_DB_NAME=product_db

# ==========================================
# ORDER SERVICE (8003/9003)
# ==========================================
ORDER_SERVICE_NAME=order-service
ORDER_HTTP_PORT=8003
ORDER_GRPC_PORT=9003
ORDER_DB_NAME=orders_db
ORDER_REDIS_DB=1

# ==========================================
# PAYMENT SERVICE (8004/9004)
# ==========================================
PAYMENT_SERVICE_NAME=payment-service
PAYMENT_HTTP_PORT=8004
PAYMENT_GRPC_PORT=9004
PAYMENT_DB_NAME=payment_db
PAYMENT_CURRENCY=USD

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# ==========================================
# INVENTORY SERVICE (8005/9005)
# ==========================================
INVENTORY_SERVICE_NAME=inventory-service
INVENTORY_HTTP_PORT=8005
INVENTORY_GRPC_PORT=9005
INVENTORY_DB_NAME=inventory_db
INVENTORY_REDIS_DB=2

# ==========================================
# NOTIFICATION SERVICE (8006/9006)
# ==========================================
NOTIFICATION_SERVICE_NAME=notification-service
NOTIFICATION_HTTP_PORT=8006
NOTIFICATION_GRPC_PORT=9006
NOTIFICATION_DB_NAME=notification_db

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@ecommerce.com
EMAIL_FROM_NAME=E-Commerce

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# ==========================================
# API GATEWAY (8000)
# ==========================================
GATEWAY_SERVICE_NAME=api-gateway
GATEWAY_HTTP_PORT=8000
GATEWAY_JWT_SECRET=your-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_BURST_SIZE=20
